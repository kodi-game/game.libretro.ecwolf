<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.ecwolf"
		name="Wolfenstein 3D (ECWolf)"
		version="0.01.0.9"
		provider-name="Braden Obrzut">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>wl6|n3d|sod|sdm|wl1|pk3</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>BSD|LGPL</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.ecwolf</source>
		<summary lang="en_GB">Wolfenstein 3D (ECWolf) v0.01</summary>
		<description lang="en_GB">ECWolf is an advanced source port for Wolfenstein 3D, Spear of Destiny, and Super 3D Noah&#39;s Ark based off of the Wolf4SDL code base.[CR][CR]Supported files: .wl6, .n3d, .sod, .sdm, .wl1, .pk3</description>
	</extension>
</addon>
